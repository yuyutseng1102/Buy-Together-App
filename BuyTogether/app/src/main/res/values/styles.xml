<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PublishDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- / 熱門團購 Hot Collection / -->
    <style name="TitleHots">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/green_7A8277</item>
    </style>
    <style name="SubTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/green_7A8277</item>
    </style>
    <style name="HomeProductTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>
    <style name="ProductTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>
    <style name="ProductContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/gray_888888</item>
    </style>

    <!-- / 開團 / -->
    <style name="GatherTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="ButtonName" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
