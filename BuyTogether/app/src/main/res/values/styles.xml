<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialCalendarTheme">@style/DatePicker</item>
        <item name="chipStyle">@style/Widget.App.Chip.Choice</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PublishDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerSize">16dp</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/green_7A8277</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/ProductTitle</item>
    </style>

    <!-- / 熱門團購 Hot Collection / -->
    <style name="TitleHots">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/green_7A8277</item>
    </style>

    <style name="DetailTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="DetailSubTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/gray_888888</item>
    </style>

    <style name="BlackContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="DetailContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/gray_888888</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/green_7A8277</item>
    </style>
    <style name="HomeProductTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>
    <style name="ProductTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>
    state_focus
    <style name="NewStatusContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange_9A4747</item>
    </style>

    <style name="OtherStatusContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_888888</item>
    </style>

    <style name="WhiteButtonName" >
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProductContent">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/gray_888888</item>
    </style>
    <style name="Number">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteId">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SeeDetailTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/green_7A8277</item>
    </style>

    <style name="StatusTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/orange_E0B291</item>
    </style>

    <!-- / 開團 / -->
    <style name="GatherTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="ButtonName" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SuccessDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>


    <style name="DetailOptionDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>



    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipIconTint">@color/colorPrimaryDark</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/colorPrimaryDark</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/colorPrimaryDark</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/colorPrimaryDark</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIconTint">@color/colorPrimaryDark</item>
        <item name="closeIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>
</resources>
