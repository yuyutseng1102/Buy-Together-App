<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/member_product_title"
        style="@style/ProductTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="白色/S"
        app:layout_constraintBottom_toBottomOf="@+id/member_product_icon"
        app:layout_constraintStart_toEndOf="@+id/member_product_icon"
        app:layout_constraintTop_toTopOf="@+id/member_product_icon" />


    <View
        android:id="@+id/view_product_separation"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray_cccccc"
        app:layout_constraintBottom_toBottomOf="@+id/member_product_title"
        app:layout_constraintStart_toEndOf="@+id/member_product_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/member_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/view_product_separation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/view_product_separation"
        app:layout_constraintTop_toTopOf="@+id/view_product_separation" />

</androidx.constraintlayout.widget.ConstraintLayout>