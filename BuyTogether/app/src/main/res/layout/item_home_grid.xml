<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item" type="com.chloe.shopshare.data.Collections" />
        <variable
            name="viewModel" type="com.chloe.shopshare.home.item.HomePageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.navigateToDetail(item)}">

        <ImageView
            android:id="@+id/imageView"
            imageUrl="@{item.mainImage}"
            android:layout_width="182dp"
            android:layout_height="182dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_placeholder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>